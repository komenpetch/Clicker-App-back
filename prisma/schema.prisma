generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Counter {
  id              Int      @id @default(autoincrement())
  value           Int      @default(0)
  clicksPerClick  Int      @default(1)
  upgrades        String   @default("") // Comma-separated upgrade IDs
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}